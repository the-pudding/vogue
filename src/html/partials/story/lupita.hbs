<section class='lupita'>
  <div class='divider-wrapper'>
    <div class='divider-line'></div>
    <div class='divider-text'><h3>{{doc.lupitaHed}}</h3></div>
  </div>

  {{#each doc.lupita}}
    <p class='prose'>{{{value}}}</p>
  {{/each}}

  <h3 class='highlightLabel'>Darkest Cover Models</h3>
  <div class='lupitaBox'>
    {{#each doc.lupitaImg}}
      <div class='lupitaBox-group'>
        <div class='img-container'>
          <img src='assets/images/covers500/{{file}}'>
        </div>
        <div class='lupitaBox-tone lupitaBox-tone{{@index}}'></div>
        <p class='lupitaBox-year lupitaBox-year{{@index}}'>{{name}} - {{year}}</p>
      </div>
    {{/each}}
  </div>

  <h3 class='highlightLabel'>Lightest Cover Models</h3>
  <div class='anneBox'>
    {{#each doc.anneImg}}
      <div class='anneBox-group'>
        <div class='img-container'>
          <img src='assets/images/covers500/{{file}}'>
        </div>
        <div class='anneBox-tone anneBox-tone{{@index}}'></div>
        <p class='anneBox-year anneBox-year{{@index}}'>{{name}} - {{year}}</p>
      </div>
    {{/each}}
  </div>

  {{#each doc.anne}}
    <p class='prose'>{{{value}}}</p>
  {{/each}}


</section>
