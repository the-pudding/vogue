.intro
	margin 0 auto
	//padding 6rem 1rem 3rem 1rem

	&__covers
		background-image: url('assets/images/gridPlaceholder.png')
		height 100%
		display flex

	&__hed
		width $column-width
		margin 10rem auto 0 auto
		text-align center
		font-family $playfair
		display flex
		flex-direction column
		padding 4.4rem 0 4rem 0
		background-color: $bg
		align-self flex-end
		h1
			margin-top 0
			margin-bottom 0
			line-height: 1
		&-1
			text-align left
			padding-left 10rem
			font-size 60px
		&-line
			display flex
			flex-direction row
			align-items: center;
			justify-content: flex-end;
			padding-right 6rem
		&-2
			font-size 60px
			margin-right 0.5rem
		&-3
			font-size 140px
		&-4
			font-size 140px

	&__dek
		max-width 22rem
		margin 0 auto 4.4rem auto
		margin-top 2rem
		text-align center
		font-family $national
		set-type-size('x-large')
		line-height: 1.2
		text-transform: uppercase;
		font-weight 300

	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
		font-family $national
		set-type-size('medium')
		color $gray

	&__withline
		max-width $column-width
		margin 0 auto
		margin-top 0.1rem
		text-align center
		font-family $national
		set-type-size('small')
		color $gray

		a
			color $gray
			border-bottom 1px solid $gray-light
			font-weight 400 !important

	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
		font-family $national
		set-type-size('small')
		color $gray
		text-transform uppercase;
