.intro
	margin 0 auto
	//padding 6rem 1rem 3rem 1rem

	&__covers
		position relative
		height auto
		display inline-block
		margin 0
		+mq('bp-4')
			display flex
			align-items flex-end
			margin 3rem 0 5rem 0

	&__imgs
		width 100%
		position relative
		+mq('bp-4')
			position absolute

	&__wrapper
		width 100%
		z-index 1
		display flex
		align-items flex-end
		margin 0
		+mq('bp-4')
			margin 1.5rem 0 0 0
		+mq('bp-5')
			align-items flex-start
			margin 2rem 0 0 0
		+mq('bp-6')
				margin 7.5rem 0 0 0

	&__hed
		width 100%
		margin 0 auto 0 auto
		text-align center
		font-family $serif-display
		display flex
		flex-direction column
		padding 2rem 0 2rem 0
		background-color: $bg
		+mq('bp-4')
			width 75%
			margin 0 auto
			padding 2rem 0 0 0
		+mq('bp-5')
			padding 4rem 0 0 0

		h1
			font-family $serif-display
			margin-top 0
			margin-bottom 0
			line-height: 1
		&-1
			text-align left
			padding-left 30%
			font-size 30px
			+mq('bp-3')
				padding-left 30%
				font-size 40px
			+mq('bp-4')
				font-size 50px
				padding-left 20%
			+mq('bp-5')
				padding-left 25%
				font-size 60px
		&-line
			display flex
			flex-direction row
			align-items center
			justify-content flex-end
			margin 0 auto
			text-align center
			padding-bottom 0.5rem
			+mq('bp-3')
				padding-bottom 1rem
		&-2
			font-size 30px
			margin-right 0.5rem
			+mq('bp-3')
				font-size 40px
			+mq('bp-4')
				font-size 50px
			+mq('bp-5')
				font-size 60px
		&-3
			font-size 80px
			+mq('bp-3')
				font-size 100px
			+mq('bp-4')
				font-size 120px
			+mq('bp-5')
				font-size 140px
		&-4
			font-size 80px
			margin 0 auto
			text-align center
			+mq('bp-3')
				font-size 100px
			+mq('bp-4')
				font-size 120px
			+mq('bp-5')
				font-size 140px

	&__dek
		max-width 22rem
		margin 0 auto 4.4rem auto
		text-align center
		font-family $national
		set-type-size('large')
		line-height: 1.2
		text-transform: uppercase;
		font-weight 300
		padding 0 1rem
		+mq('bp-3')
			set-type-size('x-large')

	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
		padding 0 1rem
		font-family $national
		set-type-size('medium')
		color $gray

	&__withline
		max-width $column-width
		margin 0 auto
		margin-top 0.1rem
		text-align center
		padding 0 1rem
		font-family $national
		set-type-size('small')
		color $gray

		a
			color $gray
			border-bottom 1px solid $gray-light
			font-weight 400 !important

	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		padding 0 1rem
		text-align center
		font-family $national
		set-type-size('small')
		color $gray
		text-transform uppercase;
