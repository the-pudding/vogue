.calculations
  &__scroll
    position relative
  &__container
    max-width $column-width
    margin 0 auto
    position: -webkit-sticky;
    position: sticky;
    &-cover
      max-width 250px
      margin 0 auto
    &-faces
      position absolute
      top 3rem
      display flex
      flex-direction row
      margin-left auto
      margin-right auto
      left 0
      right 0
      justify-content: space-around;
      img
        max-width 200px

  .scroll-text
    position relative
    max-width 30rem
    margin 0 auto
    padding 1rem
