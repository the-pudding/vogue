.repeat
  margin 20rem auto 0 auto
  &-models
    max-width $column-width
    margin 0 auto 3rem auto
    position relative
    height 500px
    overflow hidden
    &.is-expanded
      height auto
      transition height 300ms ease-in-out
      overflow none
  .model
    background-color transparent
    cursor pointer
    &:hover
      background-color rgba($gray-light, 0.5)
    &.highlight
      background-color rgba($gray-light, 0.2)

  svg
    height 30px
    //border 1px solid $bg
    box-shadow none
    //background-color: $bg
    transition 300ms ease-in-out
    //border-radius: 5px

    .repeat-name
      font-family $national

    .repeat-num
      fill $gray
      set-type-size('small')

  &-models-img
    position sticky
    position -webkit-sticky
    top 3rem
    z-index 10
    padding 1.5rem 0 0.5rem 0
    box-shadow 0rem 0.5rem 1rem rgba($gray-light, 0.3)
    white-space nowrap
    background-color rgba($white, 0.95)
    justify-content center
    display flex

    .repeat-models-container
      max-width $column-width
      margin 0 auto
      position relative
      overflow-x auto
    .g-img
      width 8rem
      display inline-block
      margin-right 5px
      .img-container
        height 11rem
        width 100%
        margin-bottom 0.25rem
        img
          width 100%
          height 11rem
          object-fit cover
      .img-tone
        width 100%
        height 1rem
      .img-year
        font-family $national
        font-size 18px
        text-align: center;
        margin 0
    .g-img
      &.hidden
        display none

  .rihannaBox
    max-width 60rem
    margin 0 auto
    padding 2rem 0
    display flex
    flex-direction row-reverse
    justify-content center
    flex-wrap wrap

    &-group
      margin-bottom 1rem

    .img-container
        height 11rem
        width 8rem
        margin 0 5px 0.25rem 0

    img
      width 100%
      object-fit cover
      height 11rem

    &-tone
      width calc(100% - 5px)
      height 1rem

      &4
        background-color: #9c6a59

      &3
        background-color: #B47648

      &2
        background-color: #CC9789

      &1
        background-color: #D6A185

      &0
        background-color: #F3B18D

  .bttn-wrapper
    max-width 5.5rem
    margin 0 auto
    cursor pointer

    .show-more
      font-family $national
      text-transform uppercase
      color $gray
      border 1px solid $gray-light
      padding 0.25rem
      width 100%
      display none
      set-type-size('small')
      &:hover
        background-color rgba($gray-light, 0.1)
      &.is-visible
        display inline-block
