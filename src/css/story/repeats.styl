.repeat
  margin 20rem auto 0 auto
  &-models
    max-width $column-width
    margin 0 auto
    position relative
  svg
    height 30px
    border 1px solid $bg
    box-shadow none
    background-color: $bg
    transition 300ms ease-in-out
    border-radius: 5px
    cursor pointer
    &:hover
    	border 1px solid $gray-light
    	box-shadow 0rem 1rem 2rem rgba($gray-light, 0.3)
      background-color red
      transition 300ms ease-in-out

    .repeat-name
      font-family $national

  &-models-img
    position sticky
    position -webkit-sticky
    top 50px
    z-index 10
    max-height 250px
    overflow-x auto
    white-space: nowrap
    .g-img
      width 150px
      display inline-block
      margin-right 5px
      .img-tone
        width 100%
        height 10px
